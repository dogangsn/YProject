@{ Layout = null;
    ViewData["Title"] = "Ağaçkakan Hobi Atölyesi | Oturum Açma Ekranı"; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link rel="icon" href="~/themes/favicon.ico">


    <link href="~/themes/admin/css/icomoon/styles.min.css" rel="stylesheet" />
    <link href="~/themes/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/themes/admin/css/bootstrap_limitless.min.css" rel="stylesheet" />
    <link href="~/themes/admin/css/layout.min.css" rel="stylesheet" />
    <link href="~/themes/admin/css/components.css" rel="stylesheet" />
    <link href="~/themes/admin/css/colors.min.css" rel="stylesheet" />
    <script src="~/themes/admin/lib/jquery/jquery.min.js"></script>
    <script src="~/themes/admin/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/themes/admin/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/themes/admin/lib/loaders/blockui.min.js"></script>
    <script src="~/themes/admin/js/app.js"></script>
    <script src="~/themes/admin/js/functions.js"></script>
    <script src="~/themes/admin/js/messages.js"></script>
    <script src="~/views/admin/login/index.js"></script>
</head>

<body>
    <div class="page-content">
        <div class="content-wrapper">
            <div class="content d-flex justify-content-center align-items-center">
                <div class="login-form wmin-sm-500">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <img src="~/themes/admin/images/logo2.png" style="width: 90% !important;" class="p-3" />
                                <h3 class="d-block text-muted my-2">Oturum Bilgilerinizi Giriniz</h3>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="text" class="form-control" id="txtUserName" placeholder="Kullanıcı adı">
                                <div class="form-control-feedback">
                                    <i class="icon-user text-muted"></i>
                                </div>
                            </div>
                            <div class="form-group form-group-feedback form-group-feedback-left">
                                <input type="password" class="form-control" id="txtPassword" placeholder="Parola">
                                <div class="form-control-feedback">
                                    <i class="icon-lock2 text-muted"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" id="btnLogin">Giriş Yap <i class="icon-circle-right2 ml-2"></i></button>
                            </div>
                            <div class="text-center">
                                <a href="#">Şifremi Unuttum?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>